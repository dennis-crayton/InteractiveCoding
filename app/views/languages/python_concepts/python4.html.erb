<script>
  // Handle all console forms
  document.querySelectorAll('.python-console-form').forEach(form => {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const exerciseNum = this.dataset.exercise;
      const outputBox = document.querySelector(`[data-output="${exerciseNum}"]`);
      const code = this.querySelector('textarea[name="code"]').value;
      const language = this.querySelector('input[name="language"]').value;
      const button = this.querySelector('button[type="submit"]');
      
      // Validate input
      if (!code.trim()) {
        outputBox.textContent = 'Error: Please enter some code first!';
        outputBox.style.color = '#ff6b6b';
        return;
      }
      
      // Show loading state
      outputBox.textContent = '⏳ Running code...';
      outputBox.style.color = '#ffd43b';
      button.disabled = true;
      button.textContent = 'Running...';
      
      try {
        const formData = new FormData();
        formData.append('code', code);
        formData.append('language', language);
        
        const response = await fetch('/code/run', {
          method: 'POST',
          body: formData
        });
        
        if (!response.ok) {
          throw new Error(`Server error: ${response.status}`);
        }
        
        const result = await response.json();
        
        // Display output with appropriate styling
        if (result.success) {
          outputBox.style.color = '#51cf66';
          outputBox.textContent = '✓ Output:\n' + result.output;
        } else {
          outputBox.style.color = '#ff6b6b';
          outputBox.textContent = '✗ ' + result.output;
        }
      } catch (error) {
        outputBox.style.color = '#ff6b6b';
        outputBox.textContent = '✗ Network Error: ' + error.message;
      } finally {
        // Reset button
        button.disabled = false;
        button.textContent = 'Run Code';
      }
    });
  });
  
</script>
