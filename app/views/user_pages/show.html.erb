<style>
  .tutorial-content {
    max-width: 900px;
    margin: 0 auto;
    padding: 20px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    line-height: 1.6;
  }

  .tutorial-content h1 {
    color: var(--accent-color);
    border-bottom: 3px solid var(--accent-color);
    padding-bottom: 10px;
  }

  .tutorial-content h2 {
    color: var(--accent-color);
    margin-top: 40px;
  }

  .tutorial-content pre {
    background: #f4f4f4;
    border-left: 4px solid var(--accent-color);
    padding: 15px;
    overflow-x: auto;
    font-family: 'Courier New', monospace;
    font-size: 14px;
  }

  .code-console {
    background: #1e1e1e;
    border-radius: 8px;
    padding: 20px;
    margin: 30px 0;
    border: 2px solid var(--accent-color);
  }

  .code-console h3 {
    color: #fff;
    margin-top: 0;
  }

  .code-console textarea {
    width: 100%;
    min-height: 150px;
    background: #2d2d2d;
    color: #d4d4d4;
    border: 1px solid #444;
    border-radius: 4px;
    padding: 10px;
    font-family: 'Courier New', monospace;
    font-size: 14px;
  }

  .code-console button {
    background: var(--accent-color);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    margin-top: 10px;
  }

  .code-console button:hover {
    opacity: 0.85;
  }

  .output-box {
    background: #2d2d2d;
    color: #d4d4d4;
    border: 1px solid #444;
    border-radius: 4px;
    padding: 15px;
    margin-top: 15px;
    min-height: 100px;
    font-family: 'Courier New', monospace;
    white-space: pre-wrap;
  }

  .exercise-prompt {
    background: #fff3cd;
    border-left: 4px solid #ffc107;
    padding: 15px;
    margin: 20px 0;
  }

  /* Back to Home button */
  .btn-back {
    display: inline-block;
    background: var(--accent-color);
    color: white !important;
    border: none;
    padding: 10px 18px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.2s ease, transform 0.1s ease;
  }

  .btn-back:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }
</style>

<div class="tutorial-content" style="--accent-color: <%= @user_page.parsed_content['accent_color'] || '#667eea' %>;">
  <%= link_to "← Back to Home", root_path, class: "btn-back" %>

  <h1><%= @user_page.title %></h1>

  <div class="meta">
    <span class="language-badge"><%= @user_page.parsed_content['language']['name'] rescue @user_page.language %></span> |
    <strong>Author:</strong> <%= @user_page.author %> |
    <strong>Downloads:</strong> <%= @user_page.downloads %> |
    <strong>Created:</strong> <%= @user_page.created_at.strftime("%B %d, %Y") %>
  </div>

  <div class="description" style="border-left: 4px solid var(--accent-color); padding-left: 10px; margin: 20px 0;">
    <%= @user_page.description %>
  </div>

  <div class="actions">
    <%= link_to "⬇ Download Tutorial", user_pages_download_path(@user_page), class: "btn btn-download" %>
  </div>

  <% content = @user_page.parsed_content %>
  <% (content['sections'] || []).each_with_index do |block, idx| %>
    <% case block['type'] %>
    <% when 'section' %>
      <section>
        <h2><%= block['title'] %></h2>
        <p><%= block['content'] %></p>
      </section>
    <% when 'code' %>
      <div class="code-console">
        <h3><%= block['title'] %></h3>
        <pre><code><%= block['code'] %></code></pre>
      </div>
    <% when 'exercise' %>
      <div class="code-console">
        <h3><%= block['title'] %></h3>
        <div class="exercise-prompt"><%= block['prompt'] %></div>
        <form class="console-form" data-exercise="<%= idx %>">
          <textarea name="code" placeholder="Write your code here..."><%= block['starter_code'] %></textarea>
          <input type="hidden" name="language" value="<%= content['language']['name'] %>">
          <button type="submit">Run Code</button>
        </form>
        <div class="output-box" data-output="<%= idx %>">Output will appear here...</div>
      </div>
    <% end %>
  <% end %>
</div>

<script>
  document.querySelectorAll('.console-form').forEach(form => {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();

      const idx = this.dataset.exercise;
      const outputBox = document.querySelector(`[data-output="${idx}"]`);
      const code = this.querySelector('textarea[name="code"]').value;
      const language = this.querySelector('input[name="language"]').value;
      const button = this.querySelector('button[type="submit"]');

      if (!code.trim()) {
        outputBox.textContent = 'Error: Please enter some code first!';
        outputBox.style.color = '#ff6b6b';
        return;
      }

      outputBox.textContent = '⏳ Running code...';
      outputBox.style.color = '#ffd43b';
      button.disabled = true;
      button.textContent = 'Running...';

      try {
        const formData = new FormData();
        formData.append('code', code);
        formData.append('language', language);

        const response = await fetch('/code/run', { method: 'POST', body: formData });
        const result = await response.json();

        if (result.success) {
          outputBox.style.color = '#51cf66';
          outputBox.textContent = '✓ Output:\n' + result.output;
        } else {
          outputBox.style.color = '#ff6b6b';
          outputBox.textContent = '✗ ' + result.output;
        }
      } catch (err) {
        outputBox.style.color = '#ff6b6b';
        outputBox.textContent = '✗ Network Error: ' + err.message;
      } finally {
        button.disabled = false;
        button.textContent = 'Run Code';
      }
    });
  });
</script>
