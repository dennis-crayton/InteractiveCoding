<style>
  .tutorial-content {
    max-width: 900px;
    margin: 0 auto;
    padding: 20px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    line-height: 1.6;
  }

  .tutorial-content h1 {
    color: var(--accent-color);
    border-bottom: 3px solid var(--accent-color);
    padding-bottom: 10px;
  }

  .tutorial-content h2 {
    color: var(--accent-color);
    margin-top: 40px;
  }

  .tutorial-content pre {
    background: #f4f4f4;
    border-left: 4px solid var(--accent-color);
    padding: 15px;
    overflow-x: auto;
    font-family: 'Courier New', monospace;
    font-size: 14px;
  }

  .code-console {
    background: #1e1e1e;
    border-radius: 8px;
    padding: 20px;
    margin: 30px 0;
    border: 2px solid var(--accent-color);
  }

  .code-console h3 {
    color: #fff;
    margin-top: 0;
  }

  .code-console textarea {
    width: 100%;
    min-height: 150px;
    background: #2d2d2d;
    color: #d4d4d4;
    border: 1px solid #444;
    border-radius: 4px;
    padding: 10px;
    font-family: 'Courier New', monospace;
    font-size: 14px;
  }

  .code-console button {
    background: var(--accent-color);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    margin-top: 10px;
  }

  .code-console button:hover {
    opacity: 0.85;
  }

  .output-box {
    background: #2d2d2d;
    color: #d4d4d4;
    border: 1px solid #444;
    border-radius: 4px;
    padding: 15px;
    margin-top: 15px;
    min-height: 100px;
    font-family: 'Courier New', monospace;
    white-space: pre-wrap;
  }

  .exercise-prompt {
    background: #fff3cd;
    border-left: 4px solid #ffc107;
    padding: 15px;
    margin: 20px 0;
  }

  .btn-back {
    display: inline-block;
    background: var(--accent-color);
    color: white !important;
    border: none;
    padding: 10px 18px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: opacity 0.2s;
  }

  .btn-back:hover {
    opacity: 0.9;
  }
  
  .btn-download {
    display: inline-block;
    background: #28a745;
    color: white !important;
    border: none;
    padding: 10px 18px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    margin-left: 10px;
  }

  .meta {
    background: #f8f9fa;
    padding: 15px;
    border-radius: 8px;
    margin: 20px 0;
  }

  .description {
    border-left: 4px solid var(--accent-color);
    padding-left: 15px;
    margin: 20px 0;
    font-size: 1.1em;
    line-height: 1.6;
  }
</style>

<div class="tutorial-content" style="--accent-color: <%= @user_page.accent_color.presence || '#667eea' %>;">
  <%= link_to "← Back to Home", root_path, class: "btn-back" %>
  <%= link_to "⬇ Download Tutorial", download_user_page_path(@user_page), class: "btn-download" %>

  <h1><%= @user_page.title %></h1>

  <div class="meta">
    <strong>Language:</strong> <%= @user_page.language&.name&.capitalize || "Unknown" %> |
    <strong>Author:</strong> <%= @user_page.author.presence || "Anonymous" %> |
    <strong>Created:</strong> <%= @user_page.created_at.strftime("%B %d, %Y") %>
  </div>

  <div class="description">
    <%= @user_page.description %>
  </div>

  <% if @user_page.sections.empty? && @user_page.code_examples.empty? && @user_page.exercises.empty? %>
    <div class="exercise-prompt">
      <strong>Note:</strong> This tutorial doesn't have any content yet.
    </div>
  <% end %>

  <!-- Render Sections -->
  <% @user_page.sections.each do |section| %>
    <section>
      <h2><%= section.title %></h2>
      <p><%= simple_format(section.content) %></p>
    </section>
  <% end %>

  <!-- Render Code Examples -->
  <% @user_page.code_examples.each do |example| %>
    <div class="code-console">
      <h3><%= example.title %></h3>
      <pre><code><%= example.code.gsub(/\\\\n|\\n/, "\n").gsub(/\\\\t|\\t/, "\t").gsub(/\\\\"|\\"/,  '"') %></code></pre>
    </div>
  <% end %>

  <!-- Render Exercises -->
  <% @user_page.exercises.each_with_index do |exercise, idx| %>
    <div class="code-console">
      <h3><%= exercise.title %></h3>
      <div class="exercise-prompt"><%= simple_format(exercise.prompt) %></div>
      <form class="console-form" data-exercise="<%= idx %>">
        <textarea name="code" placeholder="Write your code here..."><%= exercise.starter_code.gsub(/\\\\n|\\n/, "\n").gsub(/\\\\t|\\t/, "\t").gsub(/\\\\"|\\"/,  '"') %></textarea>
        <input type="hidden" name="language" value="<%= @user_page.language&.name || 'ruby' %>">
        <button type="submit">Run Code</button>
      </form>
      <div class="output-box" data-output="<%= idx %>">Output will appear here...</div>
    </div>
  <% end %>
</div>

<script>
  document.querySelectorAll('.console-form').forEach(form => {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();

      const idx = this.dataset.exercise;
      const outputBox = document.querySelector(`[data-output="${idx}"]`);
      const code = this.querySelector('textarea[name="code"]').value;
      const language = this.querySelector('input[name="language"]').value;
      const button = this.querySelector('button[type="submit"]');

      if (!code.trim()) {
        outputBox.textContent = 'Error: Please enter some code first!';
        outputBox.style.color = '#ff6b6b';
        return;
      }

      outputBox.textContent = '⏳ Running code...';
      outputBox.style.color = '#ffd43b';
      button.disabled = true;
      button.textContent = 'Running...';

      try {
        const formData = new FormData();
        formData.append('code', code);
        formData.append('language', language);

        const response = await fetch('/code/run', { method: 'POST', body: formData });
        const result = await response.json();

        if (result.success) {
          outputBox.style.color = '#51cf66';
          outputBox.textContent = '✓ Output:\n' + result.output;
        } else {
          outputBox.style.color = '#ff6b6b';
          outputBox.textContent = '✗ ' + result.output;
        }
      } catch (err) {
        outputBox.style.color = '#ff6b6b';
        outputBox.textContent = '✗ Network Error: ' + err.message;
      } finally {
        button.disabled = false;
        button.textContent = 'Run Code';
      }
    });
  });
</script>