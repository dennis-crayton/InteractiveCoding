<style>
  body {
    font-family: "Segoe UI", sans-serif;
    text-align: center;
    background: #fff;
    color: #333;
    margin: 0;
    padding: 40px 0;
  }

  h1 {
    font-size: 2.5em;
    margin-bottom: 10px;
  }

  p.subtitle {
    font-size: 1.1em;
    color: #666;
    margin-bottom: 40px;
  }

  .language-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 60px;
  }

  .language-buttons a {
    text-decoration: none;
    color: white;
    padding: 12px 25px;
    border-radius: 8px;
    font-weight: 600;
    transition: opacity 0.2s;
  }

  .language-buttons a:hover {
    opacity: 0.85;
  }

  .ruby-btn { background: #c0392b; }
  .python-btn { background: #2980b9; }
  .java-btn { background: #007396; }

  /* User Tutorials Section */
  .tutorials-section {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px;
    background: #f9f9f9;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  .tutorials-section h2 {
    font-size: 2em;
    margin-bottom: 10px;
  }

  .tutorials-section p {
    color: #666;
    margin-bottom: 30px;
  }

  .page-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
  }

  .page-card {
    border: 2px solid #ddd;
    border-radius: 12px;
    padding: 20px;
    transition: all 0.3s ease;
    background: white;
  }

  .page-card:hover {
    border-color: #667eea;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.2);
  }

  .page-title {
    font-size: 1.3em;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
  }

  .page-meta {
    font-size: 0.9em;
    color: #666;
    margin-bottom: 15px;
  }

  .page-description {
    color: #555;
    margin-bottom: 15px;
    line-height: 1.5;
  }

  .btn {
    display: inline-block;
    padding: 10px 20px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: opacity 0.2s;
  }

  .btn-view {
    background: #667eea;
    color: white;
  }

  .btn-download {
    background: #28a745;
    color: white;
  }

  .empty-state {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .create-btn {
    display: inline-block;
    margin-top: 20px;
    padding: 15px 30px;
    background: #667eea;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
  }
</style>

<h1>Interactive Coding</h1>
<p class="subtitle">Learn programming languages with interactive examples and exercises.</p>

<h2>Choose a Language:</h2>
<div class="language-buttons">
  <%= link_to "Ruby", languages_ruby_path, class: "ruby-btn" %>
  <%= link_to "Python", languages_python_path, class: "python-btn" %>
  <%= link_to "Java", "#", class: "java-btn" %>
</div>

<div class="tutorials-section">
  <h2>User-Made Language Tutorials</h2>
  <p>Explore programming tutorials created by the community.</p>

  <% if @user_pages.any? %>
    <div class="page-grid">
      <% @user_pages.each do |page| %>
        <div class="page-card">
          <div class="page-title"><%= page.title %></div>
          <div class="page-meta">
            <strong><%= page.language.capitalize %></strong> â€¢ by <%= page.author %>
          </div>
          <div class="page-description"><%= truncate(page.description, length: 100) %></div>
          <%= link_to "View", user_page_path(page), class: "btn btn-view" %>
          <%= link_to "Download", user_pages_download_path(page), class: "btn btn-download" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <h2>No tutorials yet!</h2>
      <p>Be the first to create a programming tutorial for the community.</p>
      <%= link_to "Create First Tutorial", new_user_page_path, class: "create-btn" %>
    </div>
  <% end %>
</div>
