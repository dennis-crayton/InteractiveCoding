
<style>
  .code-console {
    background: #1e1e1e;
    border-radius: 8px;
    padding: 20px;
    margin: 30px auto;
    max-width: 800px;
  }
  
  .code-console h3 {
    color: #fff;
    margin-top: 0;
    margin-bottom: 15px;

  }
  
  .code-console textarea {
    width: 100%;
    height: 200px;
    background: #2d2d2d;
    color: #d4d4d4;
    border: 1px solid #444;
    border-radius: 4px;
    padding: 15px;
    font-family: 'Courier New', monospace;
    font-size: 14px;
    resize: none;
    box-sizing: border-box;
  }
  
  .code-console button {
    background: #CC342D;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    margin-top: 10px;
  }
  
  .code-console button:hover {
    background: #a02822;
  }
  
  .output-box {
    background: #2d2d2d;
    color: #d4d4d4;
    border: 1px solid #444;
    border-radius: 4px;
    padding: 15px;
    margin-top: 15px;
    min-height: 100px;
    font-family: 'Courier New', monospace;
    white-space: pre-wrap;
  }
  
  .exercise-prompt {
    background: #fff3cd;
    border-left: 4px solid #ffc107;
    padding: 15px;
    margin: 20px 0;
  }
  </style>
 
  <div class="code-console">
    <h3>Ruby Sandbox</h3>
    <form class="ruby-console-form" data-exercise="1">
      <textarea name="code" placeholder="Write your Ruby code here..."></textarea>
      <input type="hidden" name="language" value="ruby">
      <button type="submit">Run Code</button>
    </form>
    <div class="output-box" data-output="1">Output will appear here...</div>
  </div>


<script>
  // Handle all console forms
  document.querySelectorAll('.ruby-console-form').forEach(form => {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const exerciseNum = this.dataset.exercise;
      const outputBox = document.querySelector(`[data-output="${exerciseNum}"]`);
      const code = this.querySelector('textarea[name="code"]').value;
      const language = this.querySelector('input[name="language"]').value;
      const button = this.querySelector('button[type="submit"]');
      
      // Validate input
      if (!code.trim()) {
        outputBox.textContent = 'Error: Please enter some code first!';
        outputBox.style.color = '#ff6b6b';
        return;
      }
      
      // Show loading state
      outputBox.textContent = '⏳ Running code...';
      outputBox.style.color = '#ffd43b';
      button.disabled = true;
      button.textContent = 'Running...';
      
      try {
        const formData = new FormData();
        formData.append('code', code);
        formData.append('language', language);
        
        const response = await fetch('/code/run', {
          method: 'POST',
          body: formData
        });
        
        if (!response.ok) {
          throw new Error(`Server error: ${response.status}`);
        }
        
        const result = await response.json();
        
        // Display output with appropriate styling
        if (result.success) {
          outputBox.style.color = '#51cf66';
          outputBox.textContent = '✓ Output:\n' + result.output;
        } else {
          outputBox.style.color = '#ff6b6b';
          outputBox.textContent = '✗ ' + result.output;
        }
      } catch (error) {
        outputBox.style.color = '#ff6b6b';
        outputBox.textContent = '✗ Network Error: ' + error.message;
      } finally {
        // Reset button
        button.disabled = false;
        button.textContent = 'Run Code';
      }
    });
  });
</script>
